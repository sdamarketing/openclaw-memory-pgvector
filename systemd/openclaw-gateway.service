[Unit]
Description=OpenClaw Gateway with Memory Plugin
After=network.target e5-embedding.service
Requires=e5-embedding.service

[Service]
Type=simple
WorkingDirectory=%h/.openclaw
Environment=NO_PROXY=localhost,127.0.0.1,0.0.0.0
Environment=HTTP_PROXY=http://127.0.0.1:10809
Environment=HTTPS_PROXY=http://127.0.0.1:10809
ExecStart=%h/.npm-global/bin/openclaw gateway --port 18789
Restart=always
RestartSec=10

[Install]
WantedBy=default.target
